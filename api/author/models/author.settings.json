{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "Author"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "information": {
      "type": "richtext",
      "required": true
    },
    "photo": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "course": {
      "via": "author",
      "model": "course"
    }
  }
}
